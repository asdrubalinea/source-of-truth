[
  {
    "layer": "top",
    "reload_style_on_change": true,
    "modules-left": [
      "hyprland/workspaces",
      "cpu",
      "memory",
      "temperature"
    ],
    "modules-center": ["clock", "tray"],
    "modules-right": [
      "backlight",
      "pulseaudio",
      "network",
      "custom/power",
      "battery"
    ],

    "hyprland/workspaces": {
      "on-click": "activate",
      "on-scroll-up": "hyprctl dispatch workspace e-1",
      "on-scroll-down": "hyprctl dispatch workspace e+1",
      "persistent-workspaces": {
        "*": 3
      }
    },

    "clock": {
      "format": "Û∞•î {:%H:%M}",
      "format-alt": "Û∞ÉÆ {:%A, %d %B}",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "calendar": {
        "mode": "month",
        "mode-mon-col": 3,
        "weeks-pos": "right",
        "on-scroll": 1,
        "on-click-right": "mode",
        "format": {
          "months": "<span color='#d3c6aa'><b>{}</b></span>",
          "days": "<span color='#e67e80'>{}</span>",
          "weeks": "<span color='#a7c080'><b>W{}</b></span>",
          "weekdays": "<span color='#7fbbb3'><b>{}</b></span>",
          "today": "<span color='#dbbc7f'><b><u>{}</u></b></span>"
        }
      }
    },

    "tray": {
      "icon-size": 18,
      "spacing": 5
    },

    "backlight": {
      "format": "{icon} {percent}%",
      "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
      "on-click": "brightnessctl set +5%",
      "on-click-right": "brightnessctl set 5%-"
    },

    "pulseaudio": {
      "format": "{icon} {volume}%",
      "format-bluetooth": "Û∞Ç∞ {volume}%",
      "format-bluetooth-muted": "Û∞Ç≤ {icon}",
      "format-muted": "Û∞ùü",
      "format-icons": {
        "headphone": "Û∞ãã",
        "hands-free": "Û∞•∞",
        "headset": "Û∞ãé",
        "phone": "Û∞è≤",
        "portable": "Û∞Ñù",
        "car": "Û∞Ñã",
        "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
      },
      "on-click": "pavucontrol",
      "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
      "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +2%",
      "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -2%"
    },

    "network": {
      "format-wifi": "Û∞ñ© {essid} {signalStrength}%",
      "format-ethernet": "Û∞àÄ {ifname}",
      "format-linked": "Û∞àÄ {ifname} (No IP)",
      "format-disconnected": "Û∞ñ™ Disconnected",
      "format-alt": "{ifname}: {ipaddr}/{cidr}",
      "tooltip-format": "{ifname}: {ipaddr}"
    },

    "battery": {
      "states": {
        "good": 95,
        "warning": 30,
        "critical": 15
      },
      "format": "{icon} {capacity}%",
      "format-charging": "Û∞ÇÑ {capacity}%",
      "format-plugged": "Û∞ö• {capacity}%",
      "format-alt": "{icon} {time}",
      "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "cpu": {
      "format": "Û∞òö {usage}%",
      "tooltip": true,
      "interval": 1
    },

    "memory": {
      "format": "Û∞çõ {}%",
      "interval": 1
    },

    "temperature": {
      "hwmon-path": "/sys/class/hwmon/hwmon6/temp1_input",
      "critical-threshold": 80,
      "format": "üå°Ô∏è {temperatureC}¬∞C",
      "format-critical": "üî• {temperatureC}¬∞C",
      "interval": 2
    },

    "custom/power": {
      "exec": "paste /sys/class/power_supply/BAT1/current_now /sys/class/power_supply/BAT1/voltage_now | awk '{watts = $1 * $2 / 1000000000000; if (watts < 0) printf \"‚ö° %.1f W\", -watts; else printf \"üîå %.1f W\", watts}'",
      "format": "{}",
      "interval": 2,
      "tooltip": false
    }
  }
]
